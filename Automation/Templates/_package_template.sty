% Packages needed in the declared options
\RequirePackage[options]{package-name}[date]


% Commands declaration needed in the declared options
\newcommand*{cmd}{def}
\renewcommand*{cmd}{def}
\DeclareRobustCommand*{cmd}{def}

\newcommand{cmd}{def}
\renewcommand{cmd}{def}
\DeclareRobustCommand{cmd}{def}



 %%%%%%%%%
%%       %%
% OPTIONS %
%%       %%
 %%%%%%%%%


% New option (useful commands: \CurrentOption, \OptionNotUsed, PassOptionsToPackage{options-list}{package-name})
\DeclareOption{option_name}{code}


% Management of not explicitly declared options (default: error)
\DeclareOption*{code}

% Default option list
\ExecuteOptions {options-list}

% Processing the options
\ProcessOptions\relax



